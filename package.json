{
    "name": "@zealmatch/schema",
    "version": "2.3.4",
    "description": "Yup schemas for the front and back-end",
    "license": "MIT",
    "repository": "ZEAL-MATCH-LTD/schema",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "keywords": [
        "zeal",
        "match",
        "zealmatch",
        "npm",
        "package",
        "schema",
        "yup"
    ],
    "author": "ZEAL MATCH LTD",
    "files": [
        "lib/**/*"
    ],
    "scripts": {
        "build": "tsc",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "tslint -p tsconfig.json",
        "prepare": "npm run build",
        "prepublishOnly": "npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "dependencies": {
        "yup": "^0.32.9"
    },
    "devDependencies": {
        "prettier": "^2.2.1",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.1.5"
    }
}
